@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <title>RsvpForm</title>
</head>
<body>
    <div class="panel bg-light">
        <div class="card-header bg-success text-white text-center">
            <h4>RSVP</h4>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                //return any validation messages after form has been submitted
                @Html.ValidationSummary()
                <div class="form-group">
                    <label class="font-weight-bold">Your Name:</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Your Email:</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Your Phone:</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="font-weight-bold">Are you going?</label>
                    @Html.DropDownListFor(x => x.WillAttend, new[]
                    {
                        new SelectListItem() {Text="Yes I'll be there", Value=bool.TrueString},
                        new SelectListItem() {Text="No I can't make it", Value=bool.FalseString }
                    }, "Choose an Option", new { @class = "form-control" })
                </div>
                <div class="text-center">
                    <input class="btn btn-success" type="submit" value="Submit RSVP" />
                </div>
                }
        </div>
    </div>
</body>
</html>
